(award_savior
   {>=
      {$player get_saved_count}
      1})
(award_band_savior
   {do
      ($my_save_count
         {$player get_saved_count})
      ($max 0)
      {beatmatch
         foreach_active_player
         $active_player
         {if
            {!= $active_player $player}
            {if
               {>
                  {$active_player get_saved_count}
                  $max}
               {set
                  $max
                  {$active_player get_saved_count}}}}}
      {&&
         {> $my_save_count $max}
         {>
            {user_mgr get_num_participants}
            1}}})
(award_top_performer
   {do
      ($my_percent
         {$player notes_hit_fraction})
      ($max 0)
      {beatmatch
         foreach_active_player
         $active_player
         {if
            {!= $active_player $player}
            {if
               {>
                  {$active_player notes_hit_fraction}
                  $max}
               {set
                  $max
                  {$active_player notes_hit_fraction}}}}}
      {&&
         {> $my_percent $max}
         {>
            {user_mgr get_num_participants}
            1}
         {==
            {$player get_times_failed}
            0}}})
(award_professional_streaker
   {do
      ($my_streak
         {$player longest_streak})
      ($notes_per_mulitplier
         {$player notes_per_streak})
      ($max 0)
      {beatmatch
         foreach_active_player
         $active_player
         {if
            {>
               {$active_player longest_streak}
               $max}
            {set
               $max
               {$active_player longest_streak}}}}
      {&&
         {!= 0 $notes_per_mulitplier}
         {!= 0 $my_streak}
         {>=
            {'+'
               1
               {int
                  {/ $my_streak $notes_per_mulitplier}}}
            4}
         {== $max $my_streak}
         {>
            {user_mgr get_num_participants}
            1}}})
(award_spirited_survivor
   {&&
      {==
         {$player get_times_failed}
         2}
      {==
         {$player enabled_state}
         kPlayerEnabled}})
(award_unconscious
   {==
      {$player get_times_failed}
      3})
(award_serious_skills
   {&&
      {>=
         {$player notes_hit_fraction}
         0.95}
      {<
         {$player notes_hit_fraction}
         1.0}})
(award_flawless
   #ifndef HX_WII
   {== {/ {$player longest_streak} {$player get_gem_count}} 1.0}
   #else
   {>= {$player notes_hit_fraction} 1.0}
   #endif)
(award_hoarder
   {&&
      {==
         {$player band_energy}
         1.0}
      {==
         {$player deploy_count}
         0}})
(award_real_bassist
   {&&
      {==
         {$player instrument}
         "bass"}
      {>
         {$player notes_hit_fraction}
         0}
      {!
         {$player strummed_down}}})
(award_serious_style_points
   {do
      ($my_deploy_count
         {$player deploy_count})
      ($max 0)
      {beatmatch
         foreach_active_player
         $active_player
         {if
            {!= $active_player $player}
            {if
               {>
                  {$active_player deploy_count}
                  $max}
               {set
                  $max
                  {$active_player deploy_count}}}}}
      {&&
         {> $my_deploy_count $max}
         {>
            {user_mgr get_num_participants}
            1}}})
(award_most_gutsy
   {do
      ($my_percentage
         {$player notes_hit_fraction})
      ($my_diff
         {$player difficulty})
      ($min 100)
      ($max_diff kDifficultyEasy)
      {beatmatch
         foreach_active_player
         $active_player
         {if
            {!= $active_player $player}
            {if
               {<
                  {$active_player notes_hit_fraction}
                  $min}
               {set
                  $min
                  {$active_player notes_hit_fraction}}}
            {if
               {>
                  {$active_player difficulty}
                  $max_diff}
               {set
                  $max_diff
                  {$active_player difficulty}}}}}
      {&&
         {< $my_percentage $min}
         {> $my_diff $max_diff}
         {>
            {user_mgr get_num_participants}
            1}}})
(award_awesome_solo
   {&&
      {>=
         {$player solo_percentage}
         95}
      {<
         {$player solo_percentage}
         100}})
(award_legend_solo
   {==
      {$player solo_percentage}
      100})
(award_blissful_groove
   {&&
      {==
         {$player instrument}
         "bass"}
      {>
         {/
            {$player longest_streak}
            {$player get_gem_count}}
         0.9}})