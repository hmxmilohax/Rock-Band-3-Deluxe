                     }
                     {set $dx_list_pos 5}
                  )
                  kDataUnhandled
               }
               DX_BUTTON_REMAP_DATA
            )
            kDataUnhandled
         }
      }
   )
   (on_cancel
      {if {! $dx_prompt_save}
         {dx_settings_dta_writer}}
      {$this show_state dxState_ControllerMenu}
   )
