                           }
                        }
                        {set_elem {find $syscfg beatmatcher controller joypad slots} 9 {elem $dx_button_list $dx_button_4_array_num}}
                     }
                     {set $dx_list_pos 4}
                  )
                  (5
                     {if
                        {switch $action
