;;;;;;;;;;;;;;;;GUITAR GOALS;;;;;;;;;;;;;;;;;
{push_back {find $syscfg campaign accomplishment_info accomplishments} ; The hook
   (acc_dx_hourglass                                                   ; Internal goal name, locale must be added in "dx/locale/dx_locale_updates.dta"
      (category acc_cat_guitar_dlc)
      (accomplishment_type kAccomplishmentTypeSongListConditional)
      (metascore_value career_fans_expert)                             
      (units_token unit_songs_plural)
      (units_token_singular unit_songs_singular)
      (dynamic_prereqs
         (num_songs 1)                                                 ; Number of songs in the goal
         (songs UGC_5010012))                                          ; Most likely checks for what songs you own in order to allow the goal to show 
      (conditions                                                      ; Goal Conditions, these can be accuracy, streak and stars
         (accuracy
            100
            (instrument kScoreGuitar)
            (difficulty kDifficultyExpert))
         (streak
            2741
            (instrument kScoreGuitar)                                   ; Instrument
            (difficulty kDifficultyExpert)))                            ; Difficuly
      (songs UGC_5010012)                                               ; List of songs, both lists must be filled out
   )
}

