{func
   new_transition_vignette
   ($name)
   {do
      ($panel_name
         {sprintf
            "%s_panel"
            $name})
      ($screen_name
         {sprintf
            "%s_screen"
            $name})
      {new
         InterstitialPanel
         $panel_name
         (file
            [dyn_file] #ifdef HX_WII 2 #endif)}
      {$panel_name
         set
         dyn_file
         {sprintf
            "../world/vignette/transition/%s.milo"
            $name}}
      {new
         BandScreen
         $screen_name
         (dest_screen '')
         (panels meta $panel_name transition_fallback_panel)
         (focus $panel_name)
         (enter
            #ifdef HX_WII
            {platform_mgr set_home_menu_enabled FALSE}
            #endif
            {{$this focus_panel}
               set_showing
               TRUE}
            {transition_fallback_panel set_showing FALSE}
            {{transition_fallback_panel find waiting.lbl}
               set_showing
               FALSE})
         (transition_camshot_done
            #ifdef HX_WII
            {platform_mgr set_home_menu_enabled TRUE}
            #endif
            {{$this focus_panel}
               set_showing
               FALSE}
            {transition_fallback_panel set_showing TRUE}
            {transition_fallback_panel start_loading_anim}
            kDataUnhandled)
         (TRANSITION_COMPLETE_MSG
            {ui
               goto_screen
               [dest_screen]})}}}
{func
   new_shell_vignette
   ($name)
   {do
      ($panel_name
         {sprintf
            "%s_panel"
            $name})
      {new
         BackdropPanel
         $panel_name
         (file
            [dyn_file])
         #ifndef _SHIP
         (overlay_str '')
         (enter
            {ui
               write_to_vignette_overlay
               [overlay_str]})
         #endif
         (dyn_file
            {do
               ($names
                  {eval
                     {elem
                        {find
                           $syscfg
                           vignettes
                           backdrops
                           [sv_name]}
                        1}})
               ($name
                  {random_elem $names})
               #ifndef _SHIP
               ($random_override
                  {ui get_vignette_override})
               ($cheat_display_str
                  "shell_vignette:")
               {if
                  {>= $random_override 0}
                  {set
                     $name
                     {elem
                        $names
                        {mod
                           $random_override
                           {size $names}}}}}
               {foreach
                  $v
                  $names
                  {strcat
                     $cheat_display_str
                     " "
                     {if_else
                        {== $v $name}
                        {sprint
                           "("
                           $v
                           ")"}
                        $v}}}
               {set
                  [overlay_str]
                  $cheat_display_str}
               #endif
               {sprintf
                  "../world/vignette/shell/%s.milo"
                  $name}})}
      {$panel_name
         set
         sv_name
         {symbol $name}}}}
