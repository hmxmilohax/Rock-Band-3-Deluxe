{new
   UIPanel
   tour_finished_panel
   (file
      "tour_finished.milo")
   (focus
      "continue.btn")
   (enter
      {if_else
         {is_leader_local}
         {continue.btn set_showing TRUE}
         {continue.btn set_showing FALSE}}
      {tour_name.lbl
         set
         text_token
         {{tour progress}
            get_tour_name}}
      {tour_total.lbl
         set_token_fmt
         generic_int
         {{tour progress}
            get_num_stars}}
      {conclusion.lbl
         set
         text_token
         {tour get_tour_conclusion_text}}
      {$this update_goal_info})
   (update_goal_info
      {tour_bronze.lbl
         set_token_fmt
         tourdesc_stars_needed
         {tour get_bronze_medal_goal}}
      {if_else
         {tour has_bronze_medal}
         {do
            {bronze.pic
               set
               tex_file
               {tour get_bronze_medal_icon}}
            {bronze_unearned.pic
               set
               tex_file
               ""}
            {bronze_prize_overlay.mesh set showing TRUE}}
         {do
            {bronze.pic
               set
               tex_file
               ""}
            {bronze_unearned.pic
               set
               tex_file
               {tour get_bronze_medal_icon}}
            {bronze_prize_overlay.mesh set showing FALSE}}}
      {tour_silver.lbl
         set_token_fmt
         tourdesc_stars_needed
         {tour get_silver_medal_goal}}
      {if_else
         {tour has_silver_medal}
         {do
            {silver.pic
               set
               tex_file
               {tour get_silver_medal_icon}}
            {silver_unearned.pic
               set
               tex_file
               ""}
            {silver_prize_overlay.mesh set showing TRUE}}
         {do
            {silver.pic set tex_file ''}
            {silver_unearned.pic
               set
               tex_file
               {tour get_silver_medal_icon}}
            {silver_prize_overlay.mesh set showing FALSE}}}
      {tour_gold.lbl
         set_token_fmt
         tourdesc_stars_needed
         {tour get_gold_medal_goal}}
      {if_else
         {tour has_gold_medal}
         {do
            {gold.pic
               set
               tex_file
               {tour get_gold_medal_icon}}
            {gold_unearned.pic
               set
               tex_file
               ""}
            {gold_prize_overlay.mesh set showing TRUE}}
         {do
            {gold.pic
               set
               tex_file
               ""}
            {gold_unearned.pic
               set
               tex_file
               {tour get_gold_medal_icon}}
            {gold_prize_overlay.mesh set showing FALSE}}})
   (SELECT_MSG
      {tour
         reset_tour_data
         {tour get_profile}}
      {ui goto_screen meta_loading_continue_screen})}
{new
   BandScreen
   tour_finished_screen
   (panels GAME_SCREEN_PANELS_NO_TRACK tour_finished_panel)
   (focus tour_finished_panel)}